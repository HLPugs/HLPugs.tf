{
	"name": "hlpugs-server",
	"version": "0.1.1",
	"private": true,
	"scripts": {
		"start": "npm run serve",
		"build": "rimraf localdb && rimraf dist && npm run build-ts && npm run build-logging-directory",
		"build-logging-directory": "node dist/Intel/src/utils/BuildLoggingDirectory.js",
		"build-and-seed": "npm run build && npm run seed",
		"dev": "npm run build && npm run watch-node && npm run watch-ts && npm run watch-prettier",
		"serve": "node dist/Intel/src/server.js",
		"watch-node": "nodemon dist/server.js",
		"build-ts": "tsc -p tsconfig.json",
		"seed": "rimraf localdb && node dist/Intel/src/utils/Seed.js",
		"watch-ts": "tsc -w",
		"watch-prettier": "onchange '**/*.ts' -- prettier --write {{changed}}",
		"test": "mocha",
		"coverage": "nyc mocha",
		"codecov": "nyc report --reporter=json && codecov -f coverage/*.json"
	},
	"dependencies": {
		"class-transformer": "^0.1.9",
		"class-validator": "^0.10.0",
		"config": "^3.2.0",
		"connect-redis": "^3.4.1",
		"cors": "^2.8.5",
		"dotenv": "^8.0.0",
		"express": "^4.17.1",
		"express-session": "^1.16.2",
		"mysql": "^2.17.1",
		"mysql2": "^1.6.5",
		"npm": "^6.3.0",
		"onchange": "^6.0.0",
		"reflect-metadata": "^0.1.13",
		"request": "^2.88.0",
		"rimraf": "^3.0.0",
		"routing-controllers": "^0.7.7",
		"socket-controllers": "0.0.5",
		"socket.io": "^2.4.0",
		"sqlite3": "^4.0.9",
		"steam-login": "^0.1.7",
		"typedi": "^0.8.0",
		"typeorm": "^0.2.18",
		"typeorm-linq-repository": "^1.0.0-alpha.21",
		"uuid": "^3.3.2",
		"winston": "^3.0.0"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/chai-as-promised": "^7.1.0",
		"@types/config": "0.0.34",
		"@types/connect-redis": "0.0.10",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.17.0",
		"@types/express-session": "^1.15.13",
		"@types/mocha": "^5.2.7",
		"@types/mysql2": "github:types/mysql2",
		"@types/pg": "^7.4.10",
		"@types/request": "^2.48.1",
		"@types/socket.io": "^2.1.2",
		"@types/steam-login": "^0.1.0",
		"@types/uuid": "^3.4.5",
		"@types/winston": "^2.4.4",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"codecov": "^3.5.0",
		"mocha": "^6.1.4",
		"nodemon": "^1.19.1",
		"nyc": "^14.1.1",
		"pg-minify": "^0.5.4",
		"source-map-support": "^0.5.12",
		"ts-node": "^8.3.0",
		"typescript": "^3.5.3"
	},
	"nyc": {
		"include": [
			"src/**/*.ts"
		],
		"extension": [
			".ts",
			".tsx"
		],
		"require": [
			"ts-node/register"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"sourceMap": true,
		"instrument": true
	}
}
